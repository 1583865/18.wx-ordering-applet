/* 餐品信息 */
#content {
  display: flex;
}
#content .scroll {
  flex: 2;
}
#content .scroll .item {
  display: flex;
  position: relative;
}
#content .scroll .item .product-img {
  flex: 1;

}
#content .scroll .item .product-img image {
  width: 100%;
  height: 100%;
}
#content .scroll .item .product-info {
  flex: 2;
}
#content .scroll .item .product-info .product-saled {
   font-size: 12px;
   color: gray;
}
#content .scroll .item .product-info .product-price {
  color: red;
}
#content .scroll .item .operate {
  position: absolute;
  right: 40rpx;
  bottom: 0;
  height: 50rpx;
  width: 150rpx;
  text-align: center;
  line-height: 50rpx;

}
#content .scroll .item .operate .minus, #content .scroll .item .operate .plus {
  color: red;
  border: 1px solid #ddd;
  border-radius: 50%;
  line-height: 45rpx;
  box-sizing: border-box;
}
#content .scroll .item .operate .number {
  width: 50px;
  float: left;
  box-sizing: border-box;
}
#content .scroll .item .operate .minus {
  float: left;
  width: 50rpx;
  height: 50rpx;
  box-sizing: border-box;
}
#content .scroll .item .operate .plus {
  float: right;
  width: 50rpx;
  height: 50rpx;
}


